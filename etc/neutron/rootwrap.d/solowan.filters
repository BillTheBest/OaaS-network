mkdir : PathFilter, /bin/mkdir, root , /etc/opennop
cp : PathFilter, /bin/cp, root , /etc/opennop , /etc/opennop
rmdir : PathFilter, /bin/rmdir, root , /etc/opennop
rm : PathFilter, /bin/rm, root , /etc/opennop



